                                <span>Tin tức chung</span>
                                <div class="count">(1212)</div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-chevron-right"></i>
                                <span>Tin tức chung</span>
                                <div class="count">(1212)</div>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-chevron-right"></i>
                                <span>Tuyển dụng theo nghị định tháng 06 - 2023</span>
                                <div class="count">(1212)</div>
                            </a>
                        </li>

                    </ul>
                </aside>
                <aside class="popular-news">
                    <div class="block-entry">
                        <div class="title">
                            Tin tức nổi bật
                        </div>
                        <div class="icon">
                            <i class="bi bi-arrow-bar-right"></i>&gt;
                        </div>
                    </div>
                    @foreach (var item in ViewBag.tintucnoibat)
                    {
                        <a href="#" class="side-item">
                            <div class="image">
                                <img src="@("https://vieclambinhduong.vn/Content/Upload/News_Img/" + item.ImagePath)" alt="">
                            </div>
                            <div class="text">
                                <h4 class="title-post">
                                    @item.Title
                                </h4>
                                <div class="advise-block">
                                    <div class="view-date">
                                        <i class="bi bi-calendar-minus"></i>
                                        <span>@item.NgayTao</span>
                                    </div>
                                    <div class="view-date">
                                        <i class="bi bi-eye"></i>
                                        <span>@item.Luotxem</span>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                   
                    
                </aside>
            </div>
        </div>
    </div>
</div>

