<section class="contact content-padding">
    <div class="container-small">
        <div class="block-title">
            <h3 class="title">Thông tin liên hệ</h3>
        </div>
        <div class="contact-block">
            <div class="contact-item contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3917.017988141494!2d106.6926263745195!3d10.962013555744184!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3174d1179d28bc51%3A0xb8eca68c37395554!2sEmployment%20Service%20Center%20Binh%20Duong!5e0!3m2!1sen!2s!4v1722938756362!5m2!1sen!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
            <div class="contact-item contact-form">
                <form action="">
                    <div class="form-group">
                        <label for="firstName">Họ và tên</label>
                        <input type="text" id="firstName" class="form-control" placeholder="Mời bạn nhập vào họ và tên" required>
                    </div>
                    <div class="form-group">
                        <label for="number">Số điện thoại</label>
                        <input id="number" type="number" class="form-control" placeholder="Mời bạn nhập vào số điện thoại" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input id="email" type="email" class="form-control" placeholder="Mời bạn nhập vào số điện thoại" required>
                    </div>
                    <div class="form-group">
                        <label for="content">Nội dung</label>
                        <textarea name="content" id="content" rows="5" class="form-control" placeholder="Mời bạn nhập vào nội dung" required></textarea>
                    </div>
                    <button class="btn-send btn-primary">Gửi Email</button>
                </form>
            </div>
        </div>
    </div>
</section>