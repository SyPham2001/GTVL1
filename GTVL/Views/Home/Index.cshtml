        </div>
        <div class="hot-block">
            <div class="hot-main hot-item">
                @*Slide - Tin Hot - Bắt Đầu*@
                <div class="hot-list">
                   @foreach (var item in ViewBag.SlideTinHot)
                    {
                        <a href="#" class="hot-main--item" target="_blank">
                            <img src="@("https://vieclambinhduong.vn/Content/Upload/News_Img/"+ item.ImagePath)" alt="">
                            <h5 class="title"> @item.Title</h5>
                            <p class="title-description">
                             @item.NewId             @item.CategoryId   @item.Title       
                            </p>
                        </a>
                    }                              
                </div>
                @*Slide - Tin Hot - Kết Thúc*@

                <div class="hot-list--small">
                    @foreach (var item in ViewBag.SlideTinTuc)
                    {
                        <a href="#" class="small-item">
                            <div class="small-item__img">
                                <img src="@("https://vieclambinhduong.vn/Content/Upload/News_Img/"+ item.ImagePath)" alt="">
                            </div>
                            <span class="entry-title">@item.Title</span>
                        </a>
                    }                         

                </div>
            </div>

            <div class="hot-news hot-item">
                <h4>Tin tức chung</h4>
                <div class="hot-news--list">
                    @foreach (var item in ViewBag.Tintuc)
                    {
                        <a href="/Tin-Tuc/@item.ImagePath/@item.NewId" class="hot-news--item">
                            <div class="news-item__img">
                                <img src="@("https://vieclambinhduong.vn/Content/Upload/News_Img/"+ item.ImagePath)" alt="news-1">
                            </div>
                            <div class="news-item__content">
                                <span class="entry-title">@item.Title</span>
                                <div class="advise-block">
                                    <div class="">
                                        <i class="bi bi-calendar-minus"></i>
                                        <span>@item.NgayTao</span>
                                    </div>
                                      <div class="">
                                            <i class="bi bi-eye"></i>
                                            <span>@item.Luotxem</span>
                                      </div>                                   
                                 </div>
                            </div>                           
                        </a>
                    }
                             
                </div>
            </div>
        </div>
    </div>
</section>
