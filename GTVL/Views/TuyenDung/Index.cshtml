                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>


    // Lấy tất cả các checkbox
    const kinhNghiemCheckboxes = document.querySelectorAll('input[name="kinhNghiemIds"]');
    const trinhDoCheckboxes = document.querySelectorAll('input[name="trinhDoIds"]');
    const mucLuongCheckboxes = document.querySelectorAll('input[name="mucLuongIds"]');

    // Lấy tất cả các hồ sơ
    const resumeItems = document.querySelectorAll('.card-item');

    // Hàm kiểm tra điều kiện lọc
    function checkResume(resumeItem, kinhNghiemIds, trinhDoIds, mucLuongIds) {
        const kinhNghiem = parseInt(resumeItem.dataset.kinhNghiem);
        const trinhDo = parseInt(resumeItem.dataset.trinhDo);
        const mucLuong = parseInt(resumeItem.dataset.mucLuong);

        return (kinhNghiemIds.length === 0 || kinhNghiemIds.includes(kinhNghiem)) &&
               (trinhDoIds.length === 0 || trinhDoIds.includes(trinhDo)) &&
               (mucLuongIds.length === 0 || mucLuongIds.includes(mucLuong));
    }

    // Hàm lọc hồ sơ
    function filterResumes() {
        const kinhNghiemIds = Array.from(kinhNghiemCheckboxes)
          .filter(checkbox => checkbox.checked)
          .map(checkbox => parseInt(checkbox.value));

        const trinhDoIds = Array.from(trinhDoCheckboxes)
          .filter(checkbox => checkbox.checked)
          .map(checkbox => parseInt(checkbox.value));

        const mucLuongIds = Array.from(mucLuongCheckboxes)
          .filter(checkbox => checkbox.checked)
          .map(checkbox => parseInt(checkbox.value));

        resumeItems.forEach(resumeItem => {
            if (checkResume(resumeItem, kinhNghiemIds, trinhDoIds, mucLuongIds)) {
                resumeItem.style.display = 'block';
            } else {
                resumeItem.style.display = 'none';
            }
        });
    }

    // Gắn sự kiện "change" cho các checkbox
    kinhNghiemCheckboxes.forEach(checkbox => checkbox.addEventListener('change', filterResumes));
    trinhDoCheckboxes.forEach(checkbox => checkbox.addEventListener('change', filterResumes));
    mucLuongCheckboxes.forEach(checkbox => checkbox.addEventListener('change', filterResumes));
</script>

