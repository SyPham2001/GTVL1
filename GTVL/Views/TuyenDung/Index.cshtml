                                        <div class="avatar">
                                            <img src="@(item.Logo != null ? "https://vieclambinhduong.vn/Content/Upload/Logo_DN/" + item.Logo : "default_logo.png")" alt="">
                                        </div>
                                        <div class="title-company">
                                            <span class="title">
                                                @item.TieuDeTuyenDung
                                            </span>
                                            <p class="company">@item.Ten_DN</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="item-content--info">
